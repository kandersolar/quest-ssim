<SSim>:
    name: 'ssim'

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Project Name"

        TextInput:
            text: "unnamed"

        Button:
            text: "select grid model"
            on_press: root.report("grid")

        Button:
            text: "select storage"
            on_press: root.report("storage")

        Button:
            text: "configure loads"
            on_press: root.report("loads")

        Button:
            text: "configure metrics"
            on_press: root.report("metrics")

        Button:
            text: "Run"
            on_press: root.report("run")
